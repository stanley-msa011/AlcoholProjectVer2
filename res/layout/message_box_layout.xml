<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_box_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="#CCFFFFFF"
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:id="@+id/msg_question_layout"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:layout_centerHorizontal="true"
    	android:orientation="vertical">
    	
        <TextView 
            android:id="@+id/msg_title"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="自我了解" 
    		android:textColor="#FF898989"
            />
        
    	<TextView
        	android:id="@+id/msg_emotion_text"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="你的心情量尺:" 
    		android:textColor="#FF898989"
        	/>

    	<LinearLayout 
    	    android:id="@+id/msg_emotion_layout"
    	    android:layout_width= "match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="horizontal"
    	    >
    	    <RelativeLayout
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        >
    	    	<SeekBar
        			android:id="@+id/msg_emotion_seek_bar"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content" 
        			android:progressDrawable="@+drawable/msg_bar_progress" 
        			android:max="4"
        		/>
    	    	<TextView 
    	    	    android:id="@+id/msg_emotion_num"
    	    	    android:layout_width="wrap_content"
    	    	    android:layout_height="wrap_content"
    	    	    android:gravity="left"
    	    	    android:textColor="#FF898989"
    	    	    android:layout_below="@+id/msg_emotion_seek_bar"
    	    	    />
    	    </RelativeLayout>
    	    <LinearLayout
    	        android:id="@+id/msg_emotion_show_layout"
    	    	android:layout_width= "wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:orientation="vertical"
    	        >
    	        <ImageView 
    	    		android:id="@+id/msg_emotion_show"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_gravity="center"
    	    		/>
    			<TextView
	    		    android:id = "@+id/msg_emotion_show_text"
    		    	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textColor="#FF898989"
        			android:layout_gravity="center"
        			android:gravity="center"
    		    	/>
    	    </LinearLayout>
    	</LinearLayout>
    	

    	<TextView
	        android:id="@+id/msg_desire_text"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="你的渴癮程度:" 
    		android:textColor="#FF898989"
        	/>

    	<LinearLayout 
    	    android:id="@+id/msg_desire_layout"
    	    android:layout_width= "match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="horizontal"
    	    >
    	    <RelativeLayout
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        >
    	    	<SeekBar
        			android:id="@+id/msg_desire_seek_bar"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:progressDrawable="@+drawable/msg_bar_progress" 
        			android:max="9"
        			/>
    	    	<TextView 
    	    	    android:id="@+id/msg_desire_num"
    	    	    android:layout_width="wrap_content"
    	    	    android:layout_height="wrap_content"
    	    	    android:gravity="left"
    	    	    android:textColor="#FF898989"
    	    	    android:layout_below="@+id/msg_desire_seek_bar"
    	    	    />
    	    </RelativeLayout>
    	    <LinearLayout
    	        android:id="@+id/msg_desire_show_layout"
	        	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:orientation="vertical"
        		>

    			<ImageView 
	    	    	android:id="@+id/msg_desire_show"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_gravity="center"
    	    		/>
    			<TextView
	    		    android:id = "@+id/msg_desire_show_text"
    		    	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textColor="#FF898989"
        			android:layout_gravity="center"
        			android:gravity="center"
    		    	/>
		</LinearLayout>
    	    
    	</LinearLayout>
    	


    	<TextView
	        android:id="@+id/msg_gps_text"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="是否回報現在位置?" 
    		android:textColor="#FF898989"
        	/>
    	
    	<Switch
        	android:id="@+id/msg_gps_switch"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#FF898989"
        	/>
    	
    	<LinearLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="horizontal">
    	    <TextView 
    	        android:id="@+id/msg_not_send"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:gravity="center"
    	        android:text="取消"
    	        android:textColor="#FF898989"
    	        android:layout_weight="1"
    	        />
    	    <TextView 
    	        android:id="@+id/msg_send"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:gravity="center"
    	        android:text="寄送"
    	        android:layout_weight="1"
    	        />

    	</LinearLayout>
    	
	</LinearLayout>
	<TextView 
	    android:id="@+id/msg_help"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
		android:layout_centerInParent="true"        
	    />
</RelativeLayout>