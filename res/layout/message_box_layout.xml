<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_box_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="#CCFFFFFF"
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:id="@+id/msg_question_layout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical">
    	
    	<TextView
        	android:id="@+id/msg_emotion_text"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="你的心情指數:" 
    		android:textColor="#FF000000"
        	/>

    	 <SeekBar
        	android:id="@+id/msg_emotion_seek_bar"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" 
        	android:max="4"
        	/>
    	
    	 <LinearLayout 
    	     android:id="@+id/msg_emotion_label"
    	     android:layout_width = "match_parent"
    	     android:layout_height="wrap_content"
    	     android:orientation="horizontal"
    	     />
    	 
    	<LinearLayout
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
        	>

    		<ImageView 
    	    	android:id="@+id/msg_emotion_show"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_weight="1" 
    	    	/>
    		<TextView
    		    android:id = "@+id/msg_emotion_show_text"
    		    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_weight="1" 
        		android:textColor="#FF000000"
        		android:layout_gravity="right"
    		    />
		</LinearLayout>
		
    	<TextView
	        android:id="@+id/msg_desire_text"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="你的渴癮程度:" 
    		android:textColor="#FF000000"
        	/>

    	 <SeekBar
        	android:id="@+id/msg_desire_seek_bar"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" 
        	android:max="9"
        	android:layout_weight="6"
        	/>
    	
    	 <LinearLayout 
    	     android:id="@+id/msg_desire_label"
    	     android:layout_width = "match_parent"
    	     android:layout_height="wrap_content"
    	     android:orientation="horizontal"
    	     />
    	 
    	<LinearLayout
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
        	>

    		<ImageView 
    	    	android:id="@+id/msg_desire_show"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_weight="1" 
    	    	/>
    		<TextView
    		    android:id = "@+id/msg_desire_show_text"
    		    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_weight="1" 
        		android:textColor="#FF000000"
        		android:layout_gravity="right"
    		    />
		</LinearLayout>

    	<TextView
	        android:id="@+id/msg_gps_text"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:text="是否回報現在位置?" 
    		android:textColor="#FF000000"
        	/>
    	
    	<Switch
        	android:id="@+id/msg_gps_switch"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#FF000000"
        	/>
    	
    	<Button 
    	    android:id="@+id/msg_button"
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:textColor="#FF000000"
        	android:text="確定" 
        	android:gravity="center"
        	android:layout_gravity="center"
    	    />
    
	</LinearLayout>
	<TextView 
	    android:id="@+id/msg_help"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
		android:layout_centerInParent="true"        
	    />
</RelativeLayout>