<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <RelativeLayout
       android:id ="@+id/analysis_rest_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

       
       <ImageView
        android:id ="@+id/analysis_rest_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        />
       
       <TextView
        android:id ="@+id/analysis_rest_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
        
        <TextView
        android:id ="@+id/analysis_rest_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成狀況" />
       
       
        <ImageView
            android:id="@+id/analysis_rest_bar"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        />
        


        <TextView
            android:id="@+id/analysis_rest_from"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        />
        
        <TextView
            android:id="@+id/analysis_rest_to"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        />
        
        <ImageView
            android:id="@+id/analysis_rest_progress"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        />
    </RelativeLayout>

</LinearLayout>