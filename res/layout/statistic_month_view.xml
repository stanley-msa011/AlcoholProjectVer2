<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/statistic_month_layout" 
    >

    <TextView
        android:id="@+id/statistic_month_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month_test"
        android:textColor="#FF000000" />
    
    <LinearLayout
        android:id="@+id/statistic_month_timeblock_label_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/statistic_month_title"
        />
    
	<GridLayout 
	    android:id = "@+id/statistic_month_block_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:rowCount="4"
	    android:columnCount="28"
	    android:layout_below="@+id/statistic_month_title"
	    android:layout_toRightOf="@+id/statistic_month_timeblock_label_layout"
		 />
	
	     <TextView
            android:id="@+id/statistic_month_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/statistic_month_timeblock_label_layout"
            android:layout_below="@+id/statistic_month_block_layout"
            android:textColor="#FF727171"
            android:gravity="center" 
            />
      <TextView
            android:id="@+id/statistic_month_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistic_month_block_layout"
            android:textColor="#FF727171" 
            android:gravity="center"
            android:layout_toRightOf="@+id/statistic_month_0"
            />
      <TextView
            android:id="@+id/statistic_month_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistic_month_block_layout"
            android:textColor="#FF727171" 
            android:gravity="center"
            android:layout_toRightOf="@+id/statistic_month_1"
            />
      <TextView
            android:id="@+id/statistic_month_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistic_month_block_layout"
            android:textColor="#FF727171" 
            android:gravity="center"
            android:layout_toRightOf="@+id/statistic_month_2"
            />
	
	
	<LinearLayout
        android:id="@+id/statistic_month_label_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/statistic_month_timeblock_label_layout"
        android:layout_below="@+id/statistic_month_0"
        />
    
</RelativeLayout>