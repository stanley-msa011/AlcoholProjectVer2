<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/statistic_month_layout" 
    >

    <ImageView
       	android:id="@+id/statistic_month_bg"
       	android:layout_width="match_parent"
       	android:layout_height="match_parent"
       	android:scaleType="fitXY"
     />
    
    <TextView
        android:id ="@+id/statistic_month_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        android:layout_centerHorizontal="true"
        android:text="每月測試統計"
     />
    
     <TextView
            android:id="@+id/statistic_month_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistic_month_title"
            android:gravity="center_vertical|right"
            android:textAlignment="textEnd"
            android:textColor="#FF000000" 
            android:layout_alignParentLeft="true"/>
      <TextView
            android:id="@+id/statistic_month_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistic_month_title"
            android:gravity="center_vertical|right"
            android:textAlignment="textEnd"
            android:textColor="#FF000000" 
            android:layout_alignParentRight="true"/>
    
    <LinearLayout
        android:id="@+id/statistic_month_timeblock_label_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/statistic_month_from"
        />
    
	<GridLayout 
	    android:id = "@+id/statistic_month_block_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:rowCount="4"
	    android:columnCount="28"
	    android:layout_below="@+id/statistic_month_from"
	    android:layout_toRightOf="@+id/statistic_month_timeblock_label_layout"
		 />
	
	<LinearLayout
        android:id="@+id/statistic_month_label_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/statistic_month_block_layout"
        />
    
</RelativeLayout>