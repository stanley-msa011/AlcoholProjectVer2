<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#99333333"
        android:text="今日戒酒進度" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp" 
        android:background="#FFFFFFFF">

        

 		<ImageView
 		    android:id="@+id/analysis_drunk_level_3"
 		    android:layout_width="30dp"
 		    android:layout_height="30dp"
 		    android:layout_centerHorizontal="true"
 		    android:layout_centerVertical="true"
 		    android:src="@drawable/apple_good" />

 		<ImageView
 		    android:id="@+id/analysis_drunk_level_2"
 		    android:layout_width="30dp"
 		    android:layout_height="30dp"
 		    android:layout_toLeftOf="@+id/analysis_drunk_level_3"
 		    android:layout_marginRight="5dp"
 		    android:layout_centerVertical="true"
 		    android:src="@drawable/apple_good" />
 		
 		<ImageView
 		    android:id="@+id/analysis_drunk_level_1"
 		    android:layout_width="30dp"
 		    android:layout_height="30dp"
 		    android:layout_toLeftOf="@+id/analysis_drunk_level_2"
 		    android:layout_marginRight="5dp"
 		    android:layout_centerVertical="true"
 		    android:src="@drawable/apple_good" />
 		
 		<ImageView
 		    android:id="@+id/analysis_drunk_level_4"
 		    android:layout_width="30dp"
 		    android:layout_height="30dp"
 		    android:layout_toRightOf="@+id/analysis_drunk_level_3"
 		    android:layout_marginLeft="5dp"
 		    android:layout_centerVertical="true"
 		    android:src="@drawable/apple_good" />
 		
 		<ImageView
 		    android:id="@+id/analysis_drunk_level_5"
 		    android:layout_width="30dp"
 		    android:layout_height="30dp"
 		    android:layout_toRightOf="@+id/analysis_drunk_level_4"
 		    android:layout_marginLeft="5dp"
 		    android:layout_centerVertical="true"
 		    android:src="@drawable/apple_good" />
 		
 		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/analysis_drunk_level_1"
 		    android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:text="低" />
        
 		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/analysis_drunk_level_5"
 		    android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:text="高" />
 		
    </RelativeLayout>
    
</LinearLayout>