<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_box_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" xmlns:android1="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/msg_box_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/msg_box_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msg_box_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="問卷調查" 
            android:textColor = "#FF000000"
            />

        <ImageView
            android:id="@+id/msg_box_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msg_box_emotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的心情量尺" 
            android:textColor = "#FF000000"
            />

        <RadioGroup
            android:id="@+id/msg_box_emotion_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/msg_box_e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#FF000000" />

            <RadioButton
                android:id="@+id/msg_box_e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="2" />
            
            <RadioButton
                android:id="@+id/msg_box_e3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="3" />
            
            <RadioButton
                android:id="@+id/msg_box_e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="4" />
            
            <RadioButton
                android:id="@+id/msg_box_e5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="5" />
            
        </RadioGroup>
        
        <TextView
            android:id="@+id/msg_box_desire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的喝酒慾望" 
            android:textColor = "#FF000000"
            />
        
       <RadioGroup
            android:id="@+id/msg_box_desire_group_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/msg_box_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="1" />

            <RadioButton
                android:id="@+id/msg_box_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="2" />
            
            <RadioButton
                android:id="@+id/msg_box_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="3" />
            
            <RadioButton
                android:id="@+id/msg_box_d4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="4" />
            
            <RadioButton
                android:id="@+id/msg_box_d5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="5" />
            
        </RadioGroup>
        
        <RadioGroup
            android:id="@+id/msg_box_desire_group_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/msg_box_d6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="6" />

            <RadioButton
                android:id="@+id/msg_box_d7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="7" />
            
            <RadioButton
                android:id="@+id/msg_box_d8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="8" />
            
            <RadioButton
                android:id="@+id/msg_box_d9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="9" />
            
            <RadioButton
                android:id="@+id/msg_box_d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FF000000"
                android:text="10" />
            
        </RadioGroup>
        
        <TextView
            android:id="@+id/msg_box_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否上傳所在位置" 
            android:textColor = "#FF000000"
            />

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        
            <TextView
            	android:id="@+id/msg_box_location_off"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="否" 
            	android:textColor = "#FF000000"
            />
            
        	<Switch
            	android1:id="@+id/msg_box_location_switch"
            	android1:layout_width="wrap_content"
            	android1:layout_height="wrap_content"
        	/>
        	
        	<TextView
            	android:id="@+id/msg_box_location_on"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="是" 
            	android:textColor = "#FF000000"
            />
		</LinearLayout>
        <LinearLayout 
            android:id = "@+id/msg_box_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            >
            <TextView 
                android:id = "@+id/msg_box_ok"
               	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text ="寄送"
            	android:textColor="#FFc98123" 
            	android:layout_weight = "1"
            	android:gravity = "center"
            	android:textAlignment = "center"
                />
            <TextView 
                android:id = "@+id/msg_box_cancel"
               	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text ="取消"
            	android:textColor = "#FF000000"
            	android:layout_weight = "1"
            	android:gravity = "center"
            	android:textAlignment = "center"
                />
        </LinearLayout>
        
    </LinearLayout>
    <TextView 
    	android:id = "@+id/msg_box_wait"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text ="請稍候"
    	android:textColor = "#FF000000"
    	android:layout_centerInParent="true"
    />
</RelativeLayout>